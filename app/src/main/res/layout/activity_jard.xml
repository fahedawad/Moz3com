<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Jard">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:id="@+id/getdate"
                android:layout_width="match_parent"
                android:background="#3B3434"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="أختار التاريخ" />

            <Button
                android:background="#3B3434"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/okpushdata"
                android:layout_width="match_parent"

                android:text="جلب البيانات" />
        <LinearLayout
            android:background="#F2F2F2"
            android:id="@+id/printlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@drawable/samer"
                android:layout_gravity="center"
                android:layout_width="252dp"
                android:layout_height="200dp" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/comname"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="مؤسسة سامر ابو عطية للمجمدات"
                android:textColor="#000"
                android:textSize="22dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/datelayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fahedsate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/linerprinnterHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="صنف"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/price"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="سعر شراء"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/ba3"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="سعر البيع"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/contaval"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="العدد المتبقي"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/count"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="العدد المباع"
                        android:textColor="#000"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/pases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حبات"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/total"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="المجموع"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/rb6"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="المربح"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/datejard"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="تاريخ"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/jard"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
        <ImageView
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_baseline_print_24" />
    </LinearLayout>
</ScrollView>