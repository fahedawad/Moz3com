<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#3B3434"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_gravity="center"

        android:shadowColor="#000"
        android:shadowRadius="25"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_margin="9dp"
        android:gravity="center"
        android:text="MOZ3COM APP " />
<LinearLayout
   android:layout_marginTop="100dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/bill"
        android:background="@drawable/bills"
        android:layout_width="200dp"
        android:layout_height="220dp"/>

    <ImageView
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/add"
        android:background="@drawable/add"
        android:layout_width="200dp"
        android:layout_height="220dp"/>
</LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/custom"
            android:background="@drawable/custumer"
            android:layout_width="200dp"
            android:layout_height="220dp"/>

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/storag"
            android:background="@drawable/storag"
            android:layout_width="200dp"
            android:layout_height="220dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/report"
            android:background="@drawable/report"
            android:layout_width="200dp"
            android:layout_height="220dp"/>

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/kshf"
            android:background="@drawable/kshf"
            android:layout_width="200dp"
            android:layout_height="220dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/change"
            android:background="@drawable/change"
            android:layout_width="200dp"
            android:layout_height="220dp"/>

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/order"
            android:background="@drawable/order"
            android:layout_width="200dp"
            android:layout_height="220dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>