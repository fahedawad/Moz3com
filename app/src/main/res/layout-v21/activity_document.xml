<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="#3B3434"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Document">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:background="#3B3434"
            android:elevation="15dp"
            android:layout_margin="10dp"
           app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#F0F2F4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#F0F2F4"
                    android:id="@+id/header1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="مؤسسة سامر ابو عطية "
                        android:textStyle="bold"
                        android:textSize="22dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/samer" />

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/daterep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="شركة الكرم للمجمدات"
                        android:textSize="22dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="سند قبض"
                            android:textColor="#000"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_margin="10dp"
                            android:id="@+id/namecust"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="rania"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="22dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/header4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="مبلغ وقدره"
                                android:layout_weight="4"
                                android:textColor="#000"
                                android:textSize="18sp" />
                            <EditText
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                android:background="@drawable/edit2"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/many"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:inputType="numberDecimal" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=" المبلغ كتابة "
                                android:layout_weight="4"
                                android:textColor="#000"
                                android:textSize="18sp" />
                            <EditText
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                android:background="@drawable/edit2"
                                android:layout_weight="1"
                                android:id="@+id/manytxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="text" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/shak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <RadioGroup
                            android:id="@+id/ra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:id="@+id/cashrep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="نقدا" />

                            <RadioButton
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:id="@+id/shecrep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="شيك" />
                        </RadioGroup>
                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="معلومات الشيك"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="18sp" />
                        <TextView
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="شيك رقم" />

                        <EditText
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:background="@drawable/edit2"
                            android:id="@+id/numshak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="على بنك" />

                        <EditText android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:background="@drawable/edit2"
                            android:id="@+id/nameshak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="text" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/header3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="وذلك مقابل"
                                android:layout_weight="4"
                                android:textColor="#000"
                                android:textSize="18sp" />
                            <EditText
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                android:background="@drawable/edit2"
                                android:gravity="center"
                                android:pointerIcon="none"
                                android:id="@+id/bio"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                android:inputType="text" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:id="@+id/raseed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="باقي قي الحساب"
                            android:layout_weight="4"
                            android:textColor="#000"
                            android:textSize="18sp" />
                        <EditText
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:padding="10dp"
                            android:background="@drawable/edit2"
                            android:layout_gravity="bottom"
                            android:pointerIcon="none"
                            android:id="@+id/privetmony"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                           android:gravity="center"
                            android:layout_weight="1"
                            android:inputType="text" />

                    </LinearLayout>

                    <Button
                        android:background="#3B3434"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:id="@+id/ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تخزين السند" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/print"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    app:srcCompat="@drawable/ic_baseline_print_24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>